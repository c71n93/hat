<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Hat.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ibm_plex_mono</item>
        <item name="fontFamily">@font/ibm_plex_mono</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="TextAppearance.Hat.Hero" parent="TextAppearance.Hat.Title">
        <item name="android:textSize">40sp</item>
    </style>
    <style name="TextAppearance.Hat.Timer" parent="TextAppearance.Hat.Title">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
    <style name="TextAppearance.Hat.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ibm_plex_mono</item>
        <item name="fontFamily">@font/ibm_plex_mono</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <style name="TextAppearance.Hat.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ibm_plex_mono</item>
        <item name="fontFamily">@font/ibm_plex_mono</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <style name="TextAppearance.Hat.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ibm_plex_mono</item>
        <item name="fontFamily">@font/ibm_plex_mono</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
    <style name="Widget.Hat.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:fontFamily">@font/ibm_plex_mono</item>
        <item name="fontFamily">@font/ibm_plex_mono</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="Widget.Hat.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:fontFamily">@font/ibm_plex_mono</item>
        <item name="fontFamily">@font/ibm_plex_mono</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
